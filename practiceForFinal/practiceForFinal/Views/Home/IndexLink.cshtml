@model practiceForFinal.Models.Drink

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Styles.css" rel="stylesheet" />
    <title>Enter drink info here</title>
</head>
<body>
    <div class="text-center"><h4>Enter drinks here</h4></div>
    <div class="m-3">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <div class="form-group">
                <label>Name of Drink:</label>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Name of Brand:</label>
                @Html.TextBoxFor(x => x.Brand, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Price:</label>
                @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Is it alcoholic?</label>
                @Html.DropDownListFor(x => x.IsItAlcoholic, new[]
           {
               new SelectListItem() {Text = "Yes, it is alcoholic", Value = bool.TrueString },
               new SelectListItem() {Text = "No, it is not alcoholic", Value = bool.FalseString }
           }, "Choose an Option", new {@class = "form-control"})
            </div>
            <div class="text-center">
                <input class="btn btn-success" type="submit" value="Submit drink form" />
            </div>
        }
    </div>
</body>
</html>
